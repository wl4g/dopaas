<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>super-devops-scm-starter</artifactId>
	<packaging>jar</packaging>
	<name>Super DevOps SCM Starter</name>
	<url>http://maven.apache.org</url>
	<parent>
		<groupId>com.wl4g</groupId>
		<artifactId>super-devops-scm</artifactId>
		<version>master</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<properties>
		<java.version>1.8</java.version>
		<maven-source-plugin.version>2.4</maven-source-plugin.version>
		<final.name>scm-server</final.name>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.wl4g</groupId>
			<artifactId>super-devops-scm-core</artifactId>
			<version>master</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>${final.name}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>script/**</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>${maven-source-plugin.version}</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>${project.build.finalName}-${project.version}-bin</finalName>
					<!-- not append assembly id in release file name -->
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>src/main/assemble/package.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- [Step1] add config in maven setting.xml
					<server>
						<id>docker.io</id>
						<username>your user name</username>
						<password>your password </password>
					</server>
			 -->
			<!-- [Step2] set <useMavenSettingsForAuth>true</useMavenSettingsForAuth> in <configuration> -->
			<!-- [Step3] <repository>wl4g/${project.build.finalName}</repository> the "wl4g" must be same as you docker hub username  -->
			<!-- [Step3] build command :
				normal : mvn install
				just build: mvn -Pdocker:push dockerfile:push -Ddockerfile.username=xburnerair00 -Ddockerfile.password=hwj13535248668
				build and push: mvn -Pdocker:push dockerfile:build dockerfile:push -Ddockerfile.username=xburnerair00 -Ddockerfile.password=hwj13535248668
			-->
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>dockerfile-maven-plugin</artifactId>
				<version>1.4.9</version>
				<executions>
					<execution>
						<id>default</id>
						<goals>
							<goal>build</goal>
							<goal>push</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<skip>${dockerskip}</skip>
					<!-- <contextDirectory>src/main/docker</contextDirectory> -->
					<repository>xburnerair00/test</repository>
					<useMavenSettingsForAuth>true</useMavenSettingsForAuth>
					<tag>${project.version}</tag>
					<readTimeoutMillis>30000</readTimeoutMillis>
					<connectTimeoutMillis>10000</connectTimeoutMillis>
					<buildArgs>
						<APP_NAME>${project.build.finalName}</APP_NAME>
						<APP_VERSION>${project.version}</APP_VERSION>
						<APP_BIN_NAME>${project.build.finalName}-${project.version}-bin</APP_BIN_NAME>
						<APP_PORT>14043</APP_PORT>
					</buildArgs>
				</configuration>
			</plugin>


		</plugins>
	</build>


	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<dockerskip>true</dockerskip>
			</properties>
		</profile>
		<profile>
			<id>docker:push</id>
			<properties>
				<dockerskip>false</dockerskip>
			</properties>
		</profile>
	</profiles>


</project>