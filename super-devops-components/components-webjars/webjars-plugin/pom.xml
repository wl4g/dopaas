<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>super-devops-components-webjars-plugin</artifactId>
	<packaging>jar</packaging>
	<name>Super DevOps Components Webjars Plugin</name>
	<url>http://maven.apache.org</url>
	<parent>
		<groupId>com.wl4g</groupId>
		<artifactId>super-devops-components-webjars</artifactId>
		<version>master</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<properties>
		<java.version>1.8</java.version>
		<webplugin-source.dir>${basedir}/src/main/resources/plugin-webapps/src</webplugin-source.dir>
		<webplugin-target.dir>${basedir}/src/main/resources/plugin-webapps/assets</webplugin-target.dir>
		<webplugin-final-css.name>base.all.css</webplugin-final-css.name>
		<webplugin-final-js.name>base.all.js</webplugin-final-js.name>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.wl4g</groupId>
				<artifactId>super-devops-bom</artifactId>
				<version>master</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>com.wl4g</groupId>
			<artifactId>super-devops-common</artifactId>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>minify</id>
			<build>
				<plugins>
					<!-- Minify plugin @see https://samaxes.github.io/minify-maven-plugin/index.html For example: 
						mvn -U clean install -DskipTests -Pminify -->
					<plugin>
						<groupId>com.samaxes.maven</groupId>
						<artifactId>minify-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>default-minify</id>
								<phase>package</phase>
								<goals>
									<goal>minify</goal>
								</goals>
								<configuration>
									<charset>UTF-8</charset>
									<verbose>true</verbose>
									<skipMerge>true</skipMerge>
									<closureCreateSourceMap>true</closureCreateSourceMap>
									<closureWarningLevels>
										<es5Strict>WARNING</es5Strict>
										<nonStandardJsDocs>WARNING</nonStandardJsDocs>
									</closureWarningLevels>
									<webappSourceDir>${webplugin-source.dir}</webappSourceDir>
									<webappTargetDir>${webplugin-target.dir}</webappTargetDir>
									<cssSourceDir>css</cssSourceDir>
									<jsEngine>CLOSURE</jsEngine>
									<jsSourceDir>js</jsSourceDir>
									<jsFiles>
										<jsFile>jquery-3.3.1.js</jsFile>
										<jsFile>fingerprint2-2.1.0.js</jsFile>
										<jsFile>crypto-js-4.0.0.js</jsFile>
										<jsFile>common-util-2.0.0.js</jsFile>
										<jsFile>sysmodule-2.0.0.js</jsFile>
									</jsFiles>
								</configuration>
							</execution>
							<execution>
								<id>merge-minify</id>
								<phase>package</phase>
								<goals>
									<goal>minify</goal>
								</goals>
								<configuration>
									<charset>UTF-8</charset>
									<verbose>true</verbose>
									<skipMerge>false</skipMerge>
									<closureCreateSourceMap>true</closureCreateSourceMap>
									<!-- @see https://github.com/google/closure-compiler/wiki/Warnings -->
									<closureWarningLevels>
										<es5Strict>WARNING</es5Strict>
										<nonStandardJsDocs>WARNING</nonStandardJsDocs>
									</closureWarningLevels>
									<webappSourceDir>${webplugin-source.dir}</webappSourceDir>
									<webappTargetDir>${webplugin-target.dir}</webappTargetDir>
									<jsEngine>CLOSURE</jsEngine>
									<jsSourceDir>js</jsSourceDir>
									<jsFinalFile>${webplugin-final-js.name}</jsFinalFile>
									<jsFiles>
										<jsFile>jquery-3.3.1.js</jsFile>
										<jsFile>fingerprint2-2.1.0.js</jsFile>
										<jsFile>crypto-js-4.0.0.js</jsFile>
										<jsFile>common-util-2.0.0.js</jsFile>
										<!-- <jsFile>sysmodule-2.0.0.js</jsFile> -->
									</jsFiles>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>