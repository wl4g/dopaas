<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>super-devops-iam-security</artifactId>
	<packaging>jar</packaging>
	<name>Super DevOps IAM Security</name>
	<url>http://maven.apache.org</url>
	<parent>
		<groupId>com.wl4g</groupId>
		<artifactId>super-devops-iam</artifactId>
		<version>master</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<properties>
		<java.version>1.8</java.version>
		<iam-jssdk.version>2.0.0</iam-jssdk.version>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.wl4g</groupId>
				<artifactId>super-devops-bom</artifactId>
				<version>master</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>com.wl4g</groupId>
			<artifactId>super-devops-iam-common</artifactId>
			<scope>compile</scope>
		</dependency>
		<!-- <dependency> <groupId>org.pac4j</groupId> <artifactId>pac4j-oauth</artifactId> 
			<version>1.8.7</version> </dependency> -->
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive><!-- Nutrition for package. implementation - version -->
						<manifestEntries>
							<Bundle-Version>${parsedVersion.osgiVersion}</Bundle-Version>
							<Bundle-Description>${project.description}</Bundle-Description>
							<Implementation-Version>${project.version}</Implementation-Version>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<!-- ProGuard confusion plug-in -->
			<plugin>
				<groupId>com.github.wvengen</groupId>
				<artifactId>proguard-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>proguard</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<attach>true</attach>
					<obfuscate>true</obfuscate>
					<attachArtifactClassifier>pg</attachArtifactClassifier>
					<proguardInclude>${basedir}/proguard.cfg</proguardInclude>
					<options>
						<option>-target 1.8</option>
						<option>-dontwarn</option>
						<option>-dontshrink</option>
						<option>-dontoptimize</option>
						<option>-dontskipnonpubliclibraryclasses</option>
						<option>-dontskipnonpubliclibraryclassmembers</option>
						<option>-allowaccessmodification</option>
						<option>-useuniqueclassmembernames</option>
						<option>-keeppackagenames</option>
						<option>-keepdirectories</option>
						<option>-keepattributes
							Exceptions,InnerClasses,Signature,Deprecated,SourceFile,LineNumberTable,LocalVariable*Table,*Annotation*,Synthetic,EnclosingMethod</option>
						<option>-keepclassmembers public class * {void set*(***);***
							get*();}</option>
						<option>-keep public class * extends javax.servlet.Servlet</option>
					</options>
					<outjar>${project.artifactId}-${project.version}-pg.jar</outjar>
					<libs>
						<lib>${java.home}/lib/rt.jar</lib>
						<lib>${java.home}/lib/jsse.jar</lib>
						<lib>${java.home}/lib/jce.jar</lib>
					</libs>
					<addMavenDescriptor>true</addMavenDescriptor>
					<!-- <inFilter>com/wl4g/devops/scm/client/**</inFilter> -->
					<injar>classes</injar>
					<outputDirectory>${project.build.directory}</outputDirectory>
				</configuration>
			</plugin>
			<!-- Minify and combine js/css -->
			<plugin>
				<groupId>com.samaxes.maven</groupId>
				<artifactId>minify-maven-plugin</artifactId>
				<version>1.7.4</version>
				<executions>
					<execution>
						<id>default-minify</id>
						<phase>package</phase>
						<goals>
							<!-- <goal>minify</goal> -->
							<goal>none</goal>
						</goals>
						<configuration>
							<charset>UTF-8</charset>
							<verbose>true</verbose>
							<webappSourceDir>${basedir}/src/main/resources/jssdk-webapps/</webappSourceDir>
							<webappTargetDir>${basedir}/target/jssdk-webapps/</webappTargetDir>
							<closureLanguage>ECMASCRIPT6</closureLanguage>
							<cssSourceDir>${iam-jssdk.version}/css</cssSourceDir>
							<cssFinalFile>IAM.all.css</cssFinalFile>
							<cssSourceIncludes>
								<cssSourceInclude>iam-jssdk-**.css</cssSourceInclude>
							</cssSourceIncludes>
							<jsEngine>CLOSURE</jsEngine>
							<jsSourceDir>${iam-jssdk.version}/js</jsSourceDir>
							<jsFinalFile>IAM.all.js</jsFinalFile>
							<jsSourceIncludes>
								<jsSourceInclude>iam-jssdk-**.css</jsSourceInclude>
								<jsSourceInclude>common-util.js</jsSourceInclude>
								<jsSourceInclude>iam-jssdk-**.js</jsSourceInclude>
								<jsSourceInclude>IAM.js</jsSourceInclude>
							</jsSourceIncludes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- @Deprecated YUICompression. @see http://alchim31.free.fr/mvnsites/yuicompressor-maven-plugin/compress-mojo.html -->
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>none</phase>
						<!-- <phase>prepare-package</phase> -->
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<encoding>UTF-8</encoding>
					<jswarn>false</jswarn> <!-- 不显示js可能的错误 -->
					<nosuffix>true</nosuffix> <!-- 压缩后保存文件后缀 无后缀 -->
					<linebreakpos>-1</linebreakpos> <!-- 在指定的列号后插入新行 -->
					<force>false</force> <!-- 若存在已压缩的文件，会先对比源文件是否有改动 有改动便压缩，无改动就不压缩 -->
					<!-- 压缩之前先执行聚合文件操作 -->
					<preProcessAggregates>false</preProcessAggregates>
					<failOnWarning>false</failOnWarning>
					<sourceDirectory>src/main/resources/jssdk-webapps/${iam-jssdk.version}/</sourceDirectory>
					<outputDirectory>target/classes/</outputDirectory>
					<includes>
						<include>css/iam-jssdk-**.css</include>
						<include>js/common-util.js</include>
						<include>js/iam-jssdk-**.js</include>
						<include>js/IAM.js</include>
					</includes>
					<excludes>
						<exclude>css/**.min.css</exclude>
						<exclude>js/**.min.js</exclude>
					</excludes>
					<aggregations>
						<aggregation>
							<insertNewLine>true</insertNewLine>
							<inputDir>${basedir}/src/main/resources/jssdk-webapps/${iam-jssdk.version}/</inputDir>
							<output>${basedir}/src/main/resources/jssdk-webapps/${iam-jssdk.version}/IAM.all.min.js</output>
							<includes>	<!-- 注意顺序 -->
								<include>js/jquery-3.3.1.min.js</include>
								<include>js/fingerprint2-2.1.0.min.js</include>
								<include>js/crypto-js-4.0.0.min.js</include>
								<include>js/common-util.js</include>
								<include>js/iam-jssdk-crypto.js</include>
								<include>js/iam-jssdk-captcha-jigsaw.js</include>
								<include>js/iam-jssdk-core.js</include>
								<include>js/iam-jssdk-ui.js</include>
								<include>js/IAM.js</include>
							</includes>
						</aggregation>
						<aggregation>
							<insertNewLine>true</insertNewLine>
							<inputDir>${basedir}/src/main/resources/jssdk-webapps/${iam-jssdk.version}/</inputDir>
							<output>${basedir}/src/main/resources/jssdk-webapps/${iam-jssdk.version}/IAM.all.min.js</output>
							<includes>	<!-- 注意顺序 -->
								<include>css/iam-jssdk-captcha-jigsaw.css</include>
								<include>css/iam-jssdk-ui.css</include>
								<include>css/iam-jssdk-wx.css</include>
							</includes>
						</aggregation>
					</aggregations>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>