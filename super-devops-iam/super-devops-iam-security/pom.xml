<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>super-devops-iam-security</artifactId>
	<packaging>jar</packaging>
	<name>Super DevOps IAM Security</name>
	<url>http://maven.apache.org</url>
	<parent>
		<groupId>com.wl4g</groupId>
		<artifactId>super-devops-iam</artifactId>
		<version>master</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<properties>
		<java.version>1.8</java.version>
		<iam-jssdk-source.dir>${basedir}/src/main/resources/iam-jssdk-webapps/src</iam-jssdk-source.dir>
		<iam-jssdk-target.dir>${basedir}/src/main/resources/iam-jssdk-webapps/assets</iam-jssdk-target.dir>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.wl4g</groupId>
				<artifactId>super-devops-bom</artifactId>
				<version>master</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>com.wl4g</groupId>
			<artifactId>super-devops-iam-common</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.wl4g</groupId>
			<artifactId>super-devops-components-webjars-plugin</artifactId>
			<scope>compile</scope>
		</dependency>
		<!-- <dependency> <groupId>org.pac4j</groupId> <artifactId>pac4j-oauth</artifactId> <version>1.8.7</version> 
			</dependency> -->
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive><!-- Nutrition for package. implementation - version -->
						<manifestEntries>
							<Bundle-Version>${parsedVersion.osgiVersion}</Bundle-Version>
							<Bundle-Description>${project.description}</Bundle-Description>
							<Implementation-Version>${project.version}</Implementation-Version>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<!-- ProGuard confusion plug-in -->
			<plugin>
				<groupId>com.github.wvengen</groupId>
				<artifactId>proguard-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>proguard</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<attach>true</attach>
					<obfuscate>true</obfuscate>
					<attachArtifactClassifier>pg</attachArtifactClassifier>
					<proguardInclude>${basedir}/proguard.cfg</proguardInclude>
					<options>
						<option>-target 1.8</option>
						<option>-dontwarn</option>
						<option>-dontshrink</option>
						<option>-dontoptimize</option>
						<option>-dontskipnonpubliclibraryclasses</option>
						<option>-dontskipnonpubliclibraryclassmembers</option>
						<option>-allowaccessmodification</option>
						<option>-useuniqueclassmembernames</option>
						<option>-keeppackagenames</option>
						<option>-keepdirectories</option>
						<option>-keepattributes
							Exceptions,InnerClasses,Signature,Deprecated,SourceFile,LineNumberTable,LocalVariable*Table,*Annotation*,Synthetic,EnclosingMethod</option>
						<option>-keepclassmembers public class * {void set*(***);***
							get*();}</option>
						<option>-keep public class * extends javax.servlet.Servlet</option>
					</options>
					<outjar>${project.artifactId}-${project.version}-pg.jar</outjar>
					<libs>
						<lib>${java.home}/lib/rt.jar</lib>
						<lib>${java.home}/lib/jsse.jar</lib>
						<lib>${java.home}/lib/jce.jar</lib>
					</libs>
					<addMavenDescriptor>true</addMavenDescriptor>
					<!-- <inFilter>com/wl4g/devops/scm/client/**</inFilter> -->
					<injar>classes</injar>
					<outputDirectory>${project.build.directory}</outputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>minify</id>
			<build>
				<plugins>
					<!-- Minify plugin @see https://samaxes.github.io/minify-maven-plugin/index.html For example: 
						mvn -U clean install -DskipTests -Pminify -->
					<plugin>
						<groupId>com.samaxes.maven</groupId>
						<artifactId>minify-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>default-minify</id>
								<phase>package</phase>
								<goals>
									<goal>minify</goal>
								</goals>
								<configuration>
									<charset>UTF-8</charset>
									<verbose>true</verbose>
									<skipMerge>true</skipMerge>
									<closureCreateSourceMap>true</closureCreateSourceMap>
									<closureWarningLevels>
										<es5Strict>WARNING</es5Strict>
										<nonStandardJsDocs>WARNING</nonStandardJsDocs>
									</closureWarningLevels>
									<webappSourceDir>${iam-jssdk-source.dir}</webappSourceDir>
									<webappTargetDir>${iam-jssdk-target.dir}</webappTargetDir>
									<cssSourceDir>css</cssSourceDir>
									<cssFinalFile>IAM.all.css</cssFinalFile>
									<cssSourceIncludes>
										<cssSourceInclude>**.css</cssSourceInclude>
									</cssSourceIncludes>
									<jsEngine>CLOSURE</jsEngine>
									<jsSourceDir>js</jsSourceDir>
									<jsFinalFile>IAM.all.js</jsFinalFile>
									<jsSourceIncludes>
										<jsSourceInclude>jquery-3.5.1.js</jsSourceInclude>
										<jsSourceInclude>crypto-js-4.0.0.js</jsSourceInclude>
										<jsSourceInclude>common-util-**.js</jsSourceInclude>
										<jsSourceInclude>fingerprint2-2.1.0.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-fingerprint.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-crypto.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-captcha-jigsaw.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-core.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-ui.js</jsSourceInclude>
									</jsSourceIncludes>
								</configuration>
							</execution>
							<execution>
								<id>merge-minify</id>
								<phase>package</phase>
								<goals>
									<goal>minify</goal>
								</goals>
								<configuration>
									<charset>UTF-8</charset>
									<verbose>true</verbose>
									<skipMerge>false</skipMerge>
									<closureCreateSourceMap>true</closureCreateSourceMap>
									<!-- @see https://github.com/google/closure-compiler/wiki/Warnings -->
									<closureWarningLevels>
										<es5Strict>WARNING</es5Strict>
										<nonStandardJsDocs>WARNING</nonStandardJsDocs>
									</closureWarningLevels>
									<webappSourceDir>${iam-jssdk-source.dir}</webappSourceDir>
									<webappTargetDir>${iam-jssdk-target.dir}</webappTargetDir>
									<cssSourceDir>css</cssSourceDir>
									<cssFinalFile>IAM.all.css</cssFinalFile>
									<cssSourceIncludes>
										<cssSourceInclude>**.css</cssSourceInclude>
									</cssSourceIncludes>
									<jsEngine>CLOSURE</jsEngine>
									<jsSourceDir>js</jsSourceDir>
									<jsFinalFile>IAM.all.js</jsFinalFile>
									<jsSourceIncludes>
										<jsSourceInclude>jquery-3.5.1.js</jsSourceInclude>
										<jsSourceInclude>crypto-js-4.0.0.js</jsSourceInclude>
										<jsSourceInclude>common-util-**.js</jsSourceInclude>
										<jsSourceInclude>fingerprint2-2.1.0.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-fingerprint.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-crypto.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-captcha-jigsaw.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-core.js</jsSourceInclude>
										<jsSourceInclude>iam-jssdk-ui.js</jsSourceInclude>
									</jsSourceIncludes>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>